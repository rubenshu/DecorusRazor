@page
@model DecorusRazorWeb.Pages.Categories.DeleteModel

<form method="post">
    <input hidden asp-for"Category.Id" />
    <div class="border p-3 mt-4">
        <div class="row pbb-2">
            <h2 class="text-primary">Delete Category</h2>
            <br />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Category.Name"></label>
            <input asp-for="@Model.Category.Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Category.DisplayOrder"></label>
            <input asp-for="@Model.Category.DisplayOrder" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="/Categories/Index" class="btn btn-secondary">Back to list</a>
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
}
}