@page
@model DecorusRazorWeb.Pages.Categories.EditModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pbb-2">
            <h2 class="text-primary">Edit Category</h2>
            <br />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="@Model.Category.Name"></label>
            <input asp-for="@Model.Category.Name" class="form-control" />
            <span asp-validation-for="@Model.Category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Category.DisplayOrder"></label>
            <input asp-for="@Model.Category.DisplayOrder" class="form-control" />
            <span asp-validation-for="@Model.Category.DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-page="/Categories/Index" class="btn btn-secondary">Back to list</a>
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
}
}